# (#Case #15649: verify insert/update/delete/query on type "enum")
# (#Case #15651: create index on type "enum" and verfy query )

-- source include/have_sequoiadb.inc

create table t1(a enum('1','2','3','a','b','c','d'));
insert into t1 values ('1'),('3'),('b');
select * from t1;
update t1 set a = '2' where a = '3';
select * from t1 where a = '2';
delete from t1 where a = '2';
# create index
create index a on t1(a);
# insert
insert into t1 values ('c'),('d');
# select with condition
select * from t1 where a = 'c';
select * from t1 where a < 'a';
select * from t1 where a > '1' order by a;
select * from t1 where a is not null;
select * from t1 where a > 0 limit 3 offset 1;

drop table t1;

